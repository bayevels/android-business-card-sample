<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="PlacholderTextViewStyle">
        <item name="android:layout_width">@dimen/dimension_100</item>
        <item name="android:layout_height">@dimen/dimension_24</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>


    <style name="CompanyNameTextViewStyle" parent="TextViewStyle">
        <item name="android:textSize">@dimen/dimension_24</item>
        <item name="android:fontFamily">cursive</item>
    </style>
    <style name="UserNameTextViewStyle" parent="TextViewStyle">
        <item name="android:textSize">@dimen/dimension_24</item>
        <item name="android:fontFamily">casual</item>
    </style>

    <style name="EmailTextViewStyle" parent="TextViewStyle">
        <item name="android:layout_marginLeft">@dimen/dimension_32</item>
        <item name="android:textSize">@dimen/dimension_12</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="UserCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/card_height</item>
        <item name="android:backgroundTint">@color/colorCard</item>
        <item name="android:layout_marginTop">@dimen/dimension_8</item>
        <item name="android:layout_marginLeft">@dimen/dimension_4</item>
        <item name="android:layout_marginRight">@dimen/dimension_4</item>
    </style>

    <style name="CardIconStyle" parent="TextViewStyle">
        <item name="android:layout_marginLeft">@dimen/dimension_24</item>
        <item name="android:layout_marginRight">@dimen/dimension_8</item>
    </style>
</resources>
